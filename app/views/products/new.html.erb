<% if user_signed_in? %>
  <% if current_user.admin? %>
    <div class="row justify-content-center">
      <div class="col-10 col-lg-8">

        <h1>New Product</h1>

        <%= render 'form', product: @product %>

        <%= link_to 'Back', products_path %>
      </div>
    </div>
  <% else %>
    <% controller.redirect_to new_user_session_path %>
  <% end %>
<% else %>
  <% controller.redirect_to new_user_session_path %>
<% end %>

